<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="yuan.niceui">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <!--Login 模块注册 Start-->
        <activity android:name=".login.SetLoginPasswordActivity"/>

        <activity android:name=".login.VerificationCodeActivity"/>

        <activity android:name=".login.LoginPhoneActivity"/>

        <activity android:name=".login.ForgetPasswordActivity"/>

        <activity android:name=".login.RegisterActivity"/>

        <activity android:name=".login.LoginActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!--Login 模块注册 End-->

        <!--Main 模块注册 Start-->
        <activity android:name="yuan.niceui.main.MainActivity"/>

        <!--Main 模块注册 End-->
    </application>

</manifest>