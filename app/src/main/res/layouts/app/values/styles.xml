<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<item name="android:background">@android:color/white</item>
	</style>

	<style name="scstyle" parent="Theme.AppCompat.Light">
		<item name="colorControlActivated">#00000000</item>
		<item name="colorSwitchThumbNormal">#00000000</item>
		<item name="android:colorForeground">#00000000</item>
	</style>

	<!--base editText theme. -->
	<style name="EditTheme">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/blue_start</item>
		<item name="android:background">@null</item>
	</style>
	
	<style name="ButtonTheme">
		<!-- Customize your theme here. -->
		<item name="android:paddingLeft">@dimen/size_16</item>
		<item name="android:paddingRight">@dimen/size_16</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:background">@drawable/selector_button_click</item>
		<item name="android:enabled">false</item>
	</style>

</resources>
